# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.Application.index()

# Teacher pages
GET         /teacher/list/                   controllers.teacher.TeacherController.list()
GET         /teacher/:username               controllers.teacher.TeacherController.show(username:String)
GET         /teacher/new/                    controllers.teacher.TeacherController.newTeacherForm()
POST        /teacher/post/                   controllers.teacher.TeacherController.createTeacher()
GET         /teacher/login/                  controllers.teacher.LoginController.loginForm()
POST        /teacher/doLogin/                controllers.teacher.LoginController.authenticate()
GET         /teacher/signOut/                controllers.teacher.LoginController.signOut()
POST        /teacher/upload/                 controllers.teacher.TeacherController.uploadfile()
GET         /teacher/edit/                   controllers.teacher.TeacherController.editTeacherProfile()
POST        /teacher/update/                 controllers.teacher.TeacherController.updateTeacherProfile()
POST        /teacher/changePassword/         controllers.teacher.TeacherController.changePassword()

# Course pages
GET         /course/list/                    controllers.course.CourseController.list()
GET         /course/title/:title             controllers.course.CourseController.showByTitle(title:String)
GET         /course/id/:id/                  controllers.course.CourseController.showById(id:Long)
GET         /course/new/                     controllers.course.CourseController.newCourseForm()
POST        /course/post/                    controllers.course.CourseController.createCourse()
POST        /course/search/                  controllers.course.CourseController.searchByKeyword()
GET         /course/category/:catName        controllers.course.CourseController.searchByCategory(catName:String)
GET         /course/payment/:courseID         controllers.course.CourseController.showPaymentForm(courseID:String)
GET         /course/edit/id/:id/             controllers.course.CourseController.editById(id:Long)
GET         /course/settings/                controllers.course.CourseController.showCourseSettings()
POST        /course/register/                controllers.course.CourseController.registerStudent()
POST        /course/filter/                  controllers.course.CourseController.searchByCriteria()
GET         /courses/search/                 controllers.course.CourseController.showAllCourses()
POST        /course/update/                  controllers.course.CourseController.updateCourse()
POST        /course/pay/                     controllers.course.CourseController.registerStudentAndPay()
POST        /course/addComment/				 controllers.course.CourseController.addComment()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)

# Student pages
GET         /student/new/                    controllers.student.StudentController.newStudentForm()
GET         /student/:username               controllers.student.StudentController.show(username:String)
GET         /student/list/                   controllers.student.StudentController.list()
POST        /student/post/                   controllers.student.StudentController.createStudent()
GET         /student/login/                  controllers.student.LoginController.loginForm()
POST        /student/doLogin/                controllers.student.LoginController.authenticate()
GET         /student/partnerSearch/          controllers.student.PartnerSearchController.newPartnerSearchForm()
GET         /student/signOut/                controllers.student.LoginController.signOut()
GET         /student/all/                    models.student.Student.allStudentsJson()

#Language
GET         /language/all                    models.common.Language.allLanguagesJson()

#MAIL
POST        /courseSettings/sendemail/       controllers.teacher.MailController.send()
POST        /courseSettings/sendcancellationemail/    controllers.teacher.MailController.sendcancellation()
